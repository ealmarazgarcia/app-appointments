{
  "openapi": "3.0.0",
  "info": {
    "title": "Appointments API",
    "version": "1.0.0"
  },
  "paths": {
    "/appointments": {
      "post": {
        "summary": "Registrar una cita",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Appointment"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cita registrada"
          },
          "400": {
            "description": "Error de validación"
          }
        }
      }
    },
    "/appointments/{insuredId}": {
      "get": {
        "summary": "Listar citas por insuredId",
        "parameters": [
          {
            "name": "insuredId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "^\\d{5}$"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Listado de citas"
          },
          "400": {
            "description": "Error de validación"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Appointment": {
        "type": "object",
        "properties": {
          "insuredId": {
            "type": "string",
            "example": "00125"
          },
          "scheduleId": {
            "type": "integer",
            "example": 123
          },
          "countryISO": {
            "type": "string",
            "enum": ["PE", "CL"],
            "example": "PE"
          }
        },
        "required": ["insuredId", "scheduleId", "countryISO"]
      }
    }
  }
} 